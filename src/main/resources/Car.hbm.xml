<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.bereda.mateusz.model.Car" table="tcar">
        <meta attribute="class-description">Nasz samochod</meta>

        <id name="id" column="id" type="int">
            <generator class="native"/>
        </id>

        <property name="brand" column="brand" type="string"/>
        <property name="model" column="model" type="string"/>
        <property name="power" column="power" type="int"/>
        <property name="capacity" column="capacity" type="double"/>
        <property name="date" column="date" type="date"/>
    </class>

</hibernate-mapping>